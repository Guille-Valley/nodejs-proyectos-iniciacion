<%- include("template/cabecera", {tituloWeb: 'Titulo Index' }) %>


    <div class="container">
        <h1>CRUD Mongo</h1>
        <a href="/mascotas/crear" class="btn btn-success btn-block my-4">
            Crear nueva mascota
        </a>

    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Descripcion</th>
                            <th scope="col">Apodo</th>
                        </tr>
                    </thead>
                    <% if (arrayMascotas.length> 0) { %>
                        <% arrayMascotas.forEach(element=> { %>
                            <tr>
                                <td scope="row">
                                    <%= element.id %>
                                </td>
                                <td>
                                    <%= element.nombre %>
                                </td>

                                <td>
                                    <%= element.descripcion %>
                                </td>

                                <td>
                                    <%= element.apodo %>
                                </td>
                                <td>
                                    <a href="/mascotas/<%= element.id %> " class="btn btn-warning btn-sm">Editar</a>
                                </td>
                            </tr>


                            <% }) %>
                                <% } %>
                                    </ul>
            </div>
        </div>
    </div>
    <%- include("template/footer") %>